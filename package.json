{
  "name": "philosophy-quest",
  "version": "0.1.0",
  "description": "Sierra Online style adventure game - A quarterback has 3 days to earn a philosophy masters",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:assets && vite build",
    "build:assets": "npm run build:sprites && npm run build:scenes && npm run build:audio && npm run build:scripts",
    "build:sprites": "node tools/sprite-packer/pack.js",
    "build:scenes": "node tools/scene-editor/build-scenes.js",
    "build:audio": "node tools/audio-compress/compress.js",
    "build:scripts": "node tools/script-compiler/compile.js",
    "preview": "vite preview",
    "deploy": "npm run build && gh-pages -d dist",
    "test": "vitest",
    "lint": "eslint src --ext .ts,.js",
    "sprite:watch": "chokidar 'assets/sprites/**/*.png' -c 'npm run build:sprites'",
    "scene:watch": "chokidar 'assets/scenes/**/*.png' -c 'npm run build:scenes'",
    "dev:full": "concurrently 'npm run dev' 'npm run sprite:watch' 'npm run scene:watch'"
  },
  "dependencies": {
    "pixi.js": "^7.3.2",
    "howler": "^2.2.4",
    "midi-player-js": "^2.0.16"
  },
  "devDependencies": {
    "@types/howler": "^2.2.11",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "gh-pages": "^6.1.1",
    "sharp": "^0.33.2",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "vitest": "^1.3.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/patricksomerville/philosophy-quest.git"
  },
  "keywords": [
    "game",
    "adventure",
    "sierra",
    "point-and-click",
    "philosophy",
    "retro",
    "ega"
  ],
  "author": "Patrick Somerville",
  "license": "MIT"
}
